<div class="contact-container mt-5">
  <div class='col-md-12'>

    <h2 class="text-center">Contact Us</h2>

  <!-- Contact Form -->
  <form id="contact-form" method="POST" action="/contact" class="text-center" />
    <div class='form contact-form'>
      <div class='form-group'>
        <label for='name-contact'>Name:</label>
        <input class='form-input' type='text' id='name-contact' required />
      </div>

      <div class='form-group'>
        <label for='email-contact'>Email:</label>
        <input class='form-input' type='text' id='email-contact' required />
      </div>

      <div class='form-group'>
        <label for='message-contact'>Message:</label>
        <textarea class="form-textarea" id="message-contact" rows="10" required /></textarea>
      </div>

      <div class='form-group'>
        <button class='btn btn-primary' type='submit'>Submit</button>
      </div>
    </form>
  </div>  
</div>
