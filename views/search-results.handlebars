<!-- views/search-results.handlebars -->
<div class="container">
  {{#if searchResults.length}}
    {{#each searchResults as |post|}}
      <div class='post-container'>
        <!-- container class for styling -->
        <div class='row mb-4 post'>
          <div class='col-md-12'>
            <h2 class='post-title'>
              <a href='/post/{{post.id}}'>{{post.title}}</a>
              <div class='post-info'>
                <span class='post-author'>Created by {{post.user.username}}</span>
                <span class='post-date'>on {{format_date post.date_created}}</span>
              </div>
            </h2>
            <p class='post-content'>
              {{post.content}}
            </p>
            <p class='post-location'>
              {{post.location}}
            </p>
          </div>
        </div>
      </div>
    {{/each}}
  {{else}}
    <p>No results found.</p>
  {{/if}}
</div>
