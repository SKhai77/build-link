<div class='container'>
  <form id='search-form' method='GET' action='/search'>
    <input
      type='text'
      id='search-keywords'
      name='keywords'
      placeholder='Keywords'
    />
    <input
      type='text'
      id='search-location'
      name='location'
      placeholder='Location'
    />
    <button
      type='submit'
      class='btn btn-primary'
      id='search-button'
    >Search</button>
  </form>

  {{#if searchResults}}
    {{#each searchResults as |post|}}
      <div class='post-container'>
        <!-- container class for styling -->
        <div class='row mb-4 post'>
          <div class='col-md-12'>

            <h2 class='post-title'>
              <a href='/post/{{post.id}}'>{{post.title}}</a>
              <div class='post-info'>
                <span class='post-author'>Posted by
                  {{post.user.username}}</span>
                <span class='post-date'>on
                  {{format_date post.date_created}}</span>
              </div>
            </h2>
            <p class='post-content'>
              {{post.content}}
            </p>            
          </div>
        </div>
      </div>
    {{/each}}
  {{/if}}
</div>

